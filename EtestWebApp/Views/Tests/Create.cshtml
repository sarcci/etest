@model EtestWebApp.Models.Test

@{
    ViewData["Title"] = "Create";
}

<style>
    .radio-group {
        display: flex;
        gap: 10px; 
    }
</style>

<h4>Нов тест</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ime" class="control-label">Име</label>
                <input asp-for="Ime" class="form-control" /> 
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <fieldset class="form-group radio-group">
                <div class="form-check">
                    <input type="radio" asp-for="Tip" value="false" id="option1" class="form-check-input" /> Тест
                    <label for="option1" class="form-check-label"></label>
                </div>
                <div class="form-check">
                    <input type="radio" asp-for="Tip" value="true" id="option2" class="form-check-input" /> Анкета
                    <label for="option2" class="form-check-label"></label>
                </div>
                <span asp-validation-for="Tip" class="text-danger"></span>
            </fieldset>

            <div class="form-group">
                <input type="submit" value="Додади" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Преглед на сите тестови</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
