@model EtestWebApp.Models.Prasanje

@{
    ViewData["Title"] = "Create";
    var tid = ViewData["Tid"] as int?;
}

<h4>Додадете прашање</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tekst" class="control-label"> Текст </label>
                <input asp-for="Tekst" class="form-control" />
                <span asp-validation-for="Tekst" class="text-danger"></span>
            </div>
            <!--<div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Tip" /> Multiple Choice
                </label>
            </div> -->
            <div>
                <input type="hidden" name="tid" value="@tid" />
            </div>
            <div class="form-group">
                <input type="submit" value="Додади" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Преглед на сите прашања</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
